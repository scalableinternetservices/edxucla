<body class="default">
<% provide(:title, 'Edit Education') %>
<br><br><h1>Edit Education</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4><%= @education.name%>
      <%= link_to "", '/', value: "",class: "glyphicon glyphicon-remove custom-remove-button" %>
    </h4>

    <ul>
      <% @course_users.each do |course| %>
        <li><%= course.course_name.to_s + " (" + course.course_alias.to_s + ")" %>
        <%= link_to "", '/', value: "",class: "glyphicon glyphicon-remove custom-remove-button" %></li>
      <% end %>
    </ul>
    <hr>
    <%= form_for @new_course_user, url: update_education_path do |f| %>
      <%= render 'shared/error_messages' %>
        <%= f.label :course_name %>
        <%= f.text_field :course_name, class: 'form-control' %>

        <%= f.label :course_alias %>
        <%= f.text_field :course_alias, class: 'form-control' %>

        <%= fields_for @course do |ff| %>
          <%= ff.label :department %>
          <%= ff.text_field :department, class: 'form-control' %>
        <% end %>

        <%= f.submit "Add Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</body>