<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if(@isCorrectUser) %>
        <%= link_to "Edit Profile", '/edit_profile', class: "btn btn-md btn-primary" %>
      <% end %>
    </section>
  </aside>
</div>