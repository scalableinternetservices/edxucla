<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <% if @user.education.blank? %>
        <%= f.label :education %>
        <%= f.text_field :education, placeholder: "Example: UCLA",class: 'form-control' %>
      <% end %>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>