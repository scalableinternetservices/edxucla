<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <% if @education_users.blank? %>
        <%= f.label :education %>
        <%= f.text_field :education, placeholder: "Example: UCLA", class: 'form-control' %>
      <% else %>
        <%  @educations.each do |education| %>
        <%= f.label :education %>
        <%= link_to "Edit", :action => :edit_education,:eid => education.id %>
          <p><%= education.name %></p>
            <%= f.label :courses %>
            <ul>
            <% i = 0 %>
            <% while i < @course_users.count do %>
              <% course_users = @course_users[i] %>
              <% if @counter == i %>
                <% course_users.each do |course| %>
                  <li><%= course.course_name.to_s + " " +
                          " (" +
                          course.course_alias.to_s + ") "

                   %></li>
                <% end %>
              <% end %>
              <% i +=1 %>
            <% end %>
            </ul>
            <% @counter += 1%>
        <% end %>
      <% end %>


      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>